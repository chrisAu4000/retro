<nav class="navbar navbar-expand-lg navbar-light bg-light row-g0 px-2">
	<a class="col-10 mx-0 navbar-brand" href="#">Dashboard</a>
	<a class="col-2 btn btn-outline-success" href="/auth/logout">Logout</a>
</nav>

{{#if message}}
<div class="alert {{messageClass}}" role="alert">
	{{message}}
</div>
{{/if}}

<div class="container d-flex flex-column" style="margin-top: 30px">
	<div class="row">
		<a class="btn btn-outline-primary" href="/template-create">Create a Template</a>
	</div>
	<div class="row my-3">
		{{#if templates}}
		<h3>Templates</h3>
		<ul class="list-group col-12 px-0">
			{{#each templates}}
			<li class="template list-group-item d-flex">
				<div class="col-6">
					<span class="align-middle">{{this.name}}</span>
				</div>
				<div class="col-2 px-1">
					<form method="post" action="board-create">
						<input type="hidden" name="template-id" value="{{this._id}}">
						<button type="submit" class="btn btn-outline-primary col-12">Create Retro</button>
					</form>
				</div>
				<div class="col-2 px-1">
					<a href="/template-create#{{this._id}}" class="create-template btn btn-outline-secondary col-12">Edit</a>
				</div>
				<div class="col-2 px-1">
					<form method="post" action="template-delete">
						<input type="hidden" name="id" value="{{this._id}}">
						<button type="submit" class="btn btn-outline-danger col-12">Delete</button>
					</form>
				</div>
			</li>
			{{/each}}
		</ul>
		{{/if}}
		{{#unless templates}}
		<div class="container">
			<p>no templates yet</p>
		</div>
		{{/unless}}
	</div>
	{{#if boards}}
	<h3>Retros</h3>
	<div class="row my-3">
		<ul class="list-group col-12 px-0">
			{{#each boards}}
			<li class="retro list-group-item d-flex">
				<div class="col-6">
					<span class="align-middle">{{this.date}}</span>
				</div>
				<div class="col-2 px-1">
					<span class="align-middle">{{this.name}}</span>
				</div>
				<div class="col-2 px-1">
					<a href="/admin/retro#{{this._id}}" class="btn btn-outline-secondary col-12">Edit</a>
				</div>
				<div class="col-2 px-1">
					<form method="post" action="board-delete">
						<input type="hidden" name="id" value="{{this._id}}">
						<button type="submit" class="btn btn-outline-danger col-12">Delete</button>
					</form>
				</div>
			</li>
			{{/each}}
		</ul>
	</div>
	{{/if}}
</div>